<section class="no-pad login-page fullscreen-element">
  <div class="background-image-holder">
<!--       <img class="background-image" alt="Poster Image For Mobiles" src="img/hero6.jpg">
-->      <%= image_tag("hero6.jpg", alt: 'Background Image', class: "background-image") %>
  </div>
  <div class="container align-vertical">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">
        <h1 class="text-white">Sign up</h1>
        <div class="photo-form-wrapper clearfix">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: 'Nom' %>
          <%= f.email_field :email, class: "form-email", placeholder: 'name@example.com' %>
          <%= f.password_field :password, class: "form-password", placeholder: 'Mot de passe' %>
          <%= f.submit "Sign Up", class: "login-btn btn-filled" %>
          <% end %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>



