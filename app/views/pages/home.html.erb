<header class="page-header">
	<div class="background-image-holder parallax-background">
<!-- 		<img class="background-image" alt="Background Image" src="img/hero14.jpg">
 -->
		<%= image_tag("wrkshplst-accueil.jpg", alt: 'Background Image', class: "background-image") %>

	</div>
	
	<div class="container">
		<div class="row">
			<div class="col-sm-12 text-center">
<!-- 				<img alt="logo" class="logo" src="img/logo-light.png">
 -->
				<%= image_tag("wrkshplst-logo-light.png", alt: 'logo', class: "logo") %>

				<h1 class="text-white space-bottom-medium">Create, learn and share.</h1>
				<a target="_blank" href="http://www.mediumra.re/pivot/variant/builder.html" class="btn btn-primary btn-white">Discover</a>
				<a href="#" class="btn btn-primary btn-filled">Sign Up</a>
			</div>
		</div>
	</div>
</header>

<% flash.each do |name, msg| %>
     <%= content_tag(:div, msg, class: "alert alert-info") %>
<% end %>



			
<section class="duplicatable-content">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 text-center">
				<h1>Latest Events</h1>
			</div>
		</div>
		
		<div class="row">
		  <% @lastevents.each do |lastevent| %>

			<div class="col-md-4 col-sm-6">
				<div class="blog-snippet-1">
					<%= image_tag lastevent.image.url(:medium) %>
					<h2><%= lastevent.title %></h2>
					<span class="sub alt-font">Published on July 15th 2014</span>
					<p><%= lastevent.description %></p>
					<a href="#" class="link-text">Read The Rest</a>
				</div>
			</div>
		  <% end %>
		</div>	
	</div>
</section>
		

